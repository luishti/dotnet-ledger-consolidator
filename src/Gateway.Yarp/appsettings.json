{
  "ReverseProxy": {
    "Routes": {
      "ledger": {
        "ClusterId": "ledger_cluster",
        "Match": {
          "Path": "/ledger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/ledger"
          }
        ]
      },
      "consolidator": {
        "ClusterId": "consolidator_cluster",
        "Match": {
          "Path": "/consolidator/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/consolidator"
          }
        ]
      }
    },
    "Clusters": {
      "ledger_cluster": {
        "Destinations": {
          "d1": {
            "Address": "http://ledger-api:8080/"
          }
        }
      },
      "consolidator_cluster": {
        "Destinations": {
          "d1": {
            "Address": "http://consolidator-api:8080/"
          }
        }
      }
    }
  }
}